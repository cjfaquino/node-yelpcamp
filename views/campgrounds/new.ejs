<%- include("../partials/header") %>
<div class="row">
	<div class="col-md-12"><h1 style="text-align: center;">Create a new campground</h1></div>
	<div style="width: 30%; margin: 25px auto;">
		<form action="/campgrounds" method="POST">
			<div class="form-group">
				<input
					class="form-control"
					type="text"
					name="name"
					placeholder="name"
					required
				/>
			</div>
			<div class="form-group">
				<input class="form-control" type="number" name="price" min="0" placeholder="price" required/>
			</div>
			<div class="form-group">
				<input
					class="form-control"
					type="text"
					name="description"
					placeholder="description"
				/>
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="image" placeholder="image url" required/>
			</div>
			<div class="form-group">
				<input class="btn btn-lg btn-primary btn-block" type="submit" />
			</div>
		</form>
		<a href="/campgrounds">Go Back</a>
	</div>
</div>
<%- include("../partials/footer") %>