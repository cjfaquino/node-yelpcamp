<%- include("../partials/header") %>


	<header class="jumbotron">
		<div class="container">
			<h1><i class="fas fa-campground"></i> Welcome to YelpCamp!</h1>
			<p>View our hand-picked campgrounds from all over the world</p>
			<p><a class="btn btn-primary btn-lg" href="/campgrounds/new"><i class="far fa-plus-square"></i> Add New Campground</a></p>
		</div>
	</header>
	
<div class="row">
	<% campgrounds.forEach(function(camp){ %>
	<div class="col-lg-3 col-md-4 col-sm-6 mb-4">
	<div class="card">
	  <img src="<%=camp.image%>" class="card-img-top" alt="">
	  <div class="card-body">
		<h5 class="card-title"><%=camp.name%></h5>
		<a href="/campgrounds/<%= camp._id %>" class="btn btn-sm btn-info">More Info <i class="fas fa-search-plus"></i></a>
	  </div>
	</div>
	</div>
	<% }) %>
</div>	

<%- include("../partials/footer") %>